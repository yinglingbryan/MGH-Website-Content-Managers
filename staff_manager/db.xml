<?xml version="1.0"?>
<schema version="0.3">
    <table name="pkgStaffManager">
        <field name="bID" type="I">
            <key />
            <unsigned />
            <autoincrement />
        </field>

		<field name="name" type="C" size="64" />
		<field name="title" type="C" size="64" />
		<field name="caption" type="C" size="255" />
		<field name="linkedin" type="C" size="64" />
		<field name="twitter" type="C" size="64" />
		
		<field name="photo" type="I">
			<unsigned />
			<default value="NULL" />
		</field>		

		<field name="sequence" type="I">
			<unsigned />
			<default value="NULL" />
		</field>
		
		<field name="displayOnStaff" type="I">
			<unsigned />
			<default value="1" />
		</field>
	</table>
</schema>

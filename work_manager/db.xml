<?xml version="1.0"?>
<schema version="0.3">
    <table name="pkgWorkManager">
        <field name="bID" type="I">
            <key />
            <unsigned />
            <autoincrement />
        </field>

		<field name="name" type="C" size="64" />
		<field name="caption" type="C" size="255" />
		<field name="type" type="C" size="64" />
		
		<field name="logo" type="I">
			<unsigned />
			<default value="NULL" />
		</field>
		
		<field name="assetType" type="C" size="64" />
		
		<field name="asset" type="I">
			<unsigned />
			<default value="NULL" />
		</field>
		
		<field name="assetPoster" type="I">
			<unsigned />
			<default value="NULL" />
		</field>
		
		<field name="category" type="C" size="255"></field>
		<field name="assetLabel" type="C" size="64" />
	</table>
	
	<table name="pkgWorkCategoriesManager">
        <field name="bID" type="I">
            <key />
            <unsigned />
            <autoincrement />
        </field>

		<field name="name" type="C" size="64" />
	</table>
</schema>
